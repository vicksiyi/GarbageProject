.canvas-show-page {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0px;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2;
}

.canvas-show-image {
    width: 80%;
    margin: 15% auto;
}

.canvas-img-01 {
    position: absolute;
    top: -70rpx;
    right: 5%;
}

.ani-show {
    opacity: 0;
    animation: myshow 0.5s;
    animation-fill-mode: forwards;
    animation-timing-function: ease-out;
}

@keyframes myshow {
    0% {
        transform: scale(1);
        opacity: 0.5;
    }

    50% {
        transform: scale(1.5);
        opacity: 0;
        /*圆形放大的同时，透明度逐渐减小为0*/
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}


