.outer{
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-top: -70rpx;
  margin-bottom: 30rpx;
  width: 100%;
  height: 100%;
}
.inner{
  display: flex;
  justify-content: space-around;
  border-radius: 20rpx; 
  margin-top: 20rpx;
  width: 700rpx;
  height: 175rpx;
  background-color: #ffffff;
  box-shadow: darkgrey 0.5px 0.5px 0.5px 0.5px ;
}
.pic{
  width: 35%;
  height: 120rpx;
  border-radius: 20rpx; 
  margin: 30rpx 20rpx 0rpx 20rpx
}
.img{
  display: flex;
  justify-content: center;  
}
.btn{
  width: 80%;
  margin-top: 40rpx;
  border-radius: 98rpx; 
  margin-bottom: 30rpx;
  background-color: #19be6b;
  color: #fcfdf5;
  border:solid 1px #e5e5e5;
}
