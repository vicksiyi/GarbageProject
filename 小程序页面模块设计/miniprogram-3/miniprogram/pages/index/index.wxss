}
.all1 .Item1 .content1 .time1{
  color:#fff;
  float: right;
  margin-top: -48rpx;
  font-size: 15px;
  font-family: "宋体";
  padding-right: 15rpx;
}
/*下划线*/
.reason_txt{
  font-size: 20rpx;
  color:rgb(187, 186, 186);
  display: table;
  width: auto;
  white-space: nowrap;
  border-spacing: 0.2rem 0;
  margin-top: 10rpx;
  font-family: "楷体";
}
 
.reason_txt::before,.reason_txt::after{
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#D8D8D8, #D8D8D8) repeat-x center;
  background-size: 0.1rem 0.1rem;
}
