/* pages/swiperTab/swiperTab.wxss */
.page {  
  margin-left: 10rpx;  
  margin-right: 10rpx;  
}  
/*切换*/
.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;
  background-color: #fff;  
  border-bottom: 2rpx solid #dfdfdf;  
}  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 14px;  
  color: #999999; 
  font-family: "宋体"; 
}  
.swiper {  
  height: 1100px;  
  background: #fff;  
}  
.on {  
  color: #00CC00;  
  border-bottom: 3rpx solid #00CC00;  
}  
/*推荐*/
.anglesList{ 
  display:flex;/*使用flex布局*/ 
  align-items:center;
  padding:15rpx 15rpx 15rpx 0;
  border-bottom:1px solid #EAEAE8; 
} 
.anglesList .anglesNavigator{ 
  display:flex;
  align-items:center;
  flex-grow:1;
} 

.anglesList .imgBox image{ 
  width:205rpx; 
  height:155rpx; 
  border-radius:10%; 
  margin-left: 25rpx;
  border-bottom: 1rpx solid #dfdfdf;
} 

.anglesList .textBox{ 
  flex-grow:1;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  }
.anglesList text{ 
  display:block; 
  max-width:12em; 
  overflow:hidden; 
  white-space:nowrap; 
  text-overflow:ellipsis; 
}
.anglesList .title{
  font-size: 18px;
  color:#333;
  font-family: "宋体";
}
.anglesList .anglesNavigator .tag{
   font-size: 15px;
  color: #00CC00;
  margin-top: 10px;
  font-family: "宋体";
}
.anglesList .anglesNavigator .time{
  color:#BFBFBF;
  font-size: 12px;
  margin-top: 10rpx;
  font-family: "宋体";
}
.btnFollow{ 
  flex-basis:140rpx; 
  height:46rpx; 
  border-radius:24rpx; 
  background:#fff; 
  text-align:center; 
}
.dash1{
  width: 50rpx;
  height: 50rpx;
  margin-top: 110rpx;
}
/*热门*/

.all .Item .content .bottom1{
  display: flex;
  flex-direction: row;
  align-items:right;
  justify-content: right;
  font-size: 14px;
  color:darkgrey;
  padding-top: 10rpx;
}
.all .Item .content .bottom1 .dash{
  width: 50rpx;
  height: 50rpx;
  margin-left: 200rpx;
}
